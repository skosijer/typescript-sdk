{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "baseUrl": "./",
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "lib": ["esnext"],
    "sourceMap": true
  },
  "include": ["src/"]
}
